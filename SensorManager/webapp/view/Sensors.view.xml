<!--
my notes:

data from json file obj: "sensors": [
which has customer and location.  group by customer -- CustomListItem will show all location items for parent

-->

<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"

    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"

    displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
            <IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
                <content>
                </content>
            </IconTabBar>


            <f:GridList id="sensorsList" 
            items="{path: 'sensorModel>/sensors', sorter: {path:'customer', group:true, descending: false}}"
            noDataText="No sensors">

                <f:customLayout>
                    <grid:GridBoxLayout/>
                </f:customLayout>
                <f:items>
                     
                     <CustomListItem>
                        <Title text="{sensorModel>location}"/>
                    </CustomListItem>

                </f:items>
            </f:GridList>

        </content>
    </Page>
</mvc:View>